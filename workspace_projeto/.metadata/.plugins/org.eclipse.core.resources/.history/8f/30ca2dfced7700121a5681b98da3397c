package classes;

import java.util.ArrayList;
import java.util.List;

import javax.swing.JOptionPane;

public class Rank {

	List<Aluno> rankeados;
	GerenciadorProfessor gerenciadorP;
	Arquivo arquivo = new Arquivo();
	
	public Rank() {
		gerenciadorP = new GerenciadorProfessor();
		rankeados = new ArrayList<>();
		rankeados = gerenciadorP.alunoM.alunos;
	}
	
	public void mostrarRank(){
		String rank = "";
		for (Aluno aluno : rankeados) {
			rank += (aluno.getNome() + "          " + aluno.getPontuacao() + "\n");
		}
		JOptionPane.showMessageDialog(null, "RANK\n\n" + rank);
	}
}
