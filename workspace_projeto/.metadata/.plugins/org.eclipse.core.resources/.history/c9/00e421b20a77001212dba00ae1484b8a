package classes;

import javax.swing.JOptionPane;

public class GerenciadorProfessor {

	AlunoMetodos    alunoM    = new AlunoMetodos();
	PerguntaMetodos perguntaM = new PerguntaMetodos();
	
	public GerenciadorProfessor() {
	}
	
	public void menu(){
		String op = JOptionPane.showInputDialog("1 - Cadastrar Aluno\n2 - Listar Aluno\n3 - Excluir Aluno\n4 - Cadastrar Pergunta\n5 - Listar Pergunta\n6 - Excluir Pergunta\n7 - Menu Principal");
		if(op.equals("1")){
//			alunoM.cadastrarAluno();
//			menu();
		}else if(op.equals("2")){
			alunoM.listarAluno();
			menu();
		}else if(op.equals("3")){
			alunoM.excluirAluno();
			menu();
		}else if(op.equals("4")){
			perguntaM.cadastrarPergunta();
			menu();
		}else if(op.equals("5")){
			perguntaM.listarPergunta();
			menu();
		}else if(op.equals("6")){
			perguntaM.excluirPergunta();
			menu();
		}else if(op.equals("7")){
			//Volta ao menu principal
		}else{
			JOptionPane.showMessageDialog(null, "Opção inválida!");
			menu();
		}
	}

}
