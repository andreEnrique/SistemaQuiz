package teste;

import javax.swing.JOptionPane;

public class Menu01 {
	
	Menu02 m02 = new Menu02();
	
	public void menu01(){
		String opcao = JOptionPane.showInputDialog("1 - Próximo menu\n2 - Continua aqui!");
		if(opcao.equals("1")){
			m02.menu02();
		}else{
			JOptionPane.showMessageDialog(null, "Continuando aqui...");
			menu01();
		}
	}
}
