package br.com.ufpb.classes;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

import javax.swing.JOptionPane;

public class Rank {
	
	List<Rankeado> rankeados = new ArrayList<>();
	
	public Rank() {
	}
	
	public void rank(){
		Collections.sort(rankeados);
		JOptionPane.showMessageDialog(null,"     NOME          PONTUAÇÂO");
		for (Rankeado rank : rankeados) {
			JOptionPane.showMessageDialog(null, rank.getNome() + "          " + rank.getPontuacao());
		}
	}
	
	public void adicionarRank(String nome, int pontuacao){
		this.rankeados.add(new Rankeado(nome, pontuacao));
	}
}
