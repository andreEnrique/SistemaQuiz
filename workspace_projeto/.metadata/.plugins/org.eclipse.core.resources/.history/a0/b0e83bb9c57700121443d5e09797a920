	Instrucao    instrucoes = new Instrucao();
	Arquivo      arquivo    = new Arquivo();
	Login		 login		= new Login();
	
	public void menu(){
		String opcao = JOptionPane.showInputDialog("\tQuiz de programação\n\n1 - Jogar\n2 - Rank\n3 - Instruções\n4 - Sair");
		if(opcao.equals("1")){
			lo
		}else if(opcao.equals("2")){
			menu();
		}else if(opcao.equals("3")){
			instrucoes.instrucao();
			menu();
		}else if(opcao.equals("4")){
			try {
				arquivo.adicionarAluno(alunoM.alunos);
				JOptionPane.showMessageDialog(null, "Obrigado por utilizar o nosso software!");
			} catch (FileNotFoundException e) {
			} catch (IOException e) {
			}
		}else{
			JOptionPane.showMessageDialog(null, "Opção inválida, tente novamente!");
			menu();
		}
	}

}
