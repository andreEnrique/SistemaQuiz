package br.com.ufpb.classes;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.ArrayList;

public class Arquivo {
	
	public void adicionarAluno(ArrayList<Aluno> aluno){
		try(FileOutputStream arquivo = new FileOutputStream("alunos.txt",true)){
			try(ObjectOutputStream escreve = new ObjectOutputStream(arquivo)){
				escreve.writeObject(aluno);
			}
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public ArrayList<Aluno> listarAluno() throws FileNotFoundException, IOException, ClassNotFoundException{
		ArrayList<Aluno> retorno = new ArrayList<>();
		try(FileInputStream arquivo = new FileInputStream("alunos.txt")){
			try(ObjectInputStream ler = new ObjectInputStream(arquivo)){
				retorno.add((Aluno) ler.readObject());
			}
		}
		return retorno;
	}

}
