package classes;

import java.util.ArrayList;

import javax.swing.JOptionPane;

public class PerguntaMetodos {

	ArrayList<Pergunta> perguntas;
	
	public PerguntaMetodos() {
		perguntas = new ArrayList<>();
	}
	
	public void cadastrarPergunta(){
		String pergunta = JOptionPane.showInputDialog("Digite a pergunta: ");
		String op01 = JOptionPane.showInputDialog("Digite a opção 01: ");
		String op02 = JOptionPane.showInputDialog("Digite a opção 02: ");
		String op03 = JOptionPane.showInputDialog("Digite a opção 03: ");
		String op04 = JOptionPane.showInputDialog("Digite a opção 04: ");
		String correta = JOptionPane.showInputDialog("Digite a alternativa correta: \n\n1 - " + op01 + "\n2 - " + op02 + "\n3 - " + op03 + "\n4 - " + op04);
		perguntas.add(new Pergunta(pergunta, op01, op02, op03, op04, correta));
		JOptionPane.showMessageDialog(null, "Pergunta cadastrada com sucesso!");
	}
	
	public void listarPergunta(){
		if(perguntas.size() > 0){
			JOptionPane.showMessageDialog(null,perguntas.size() + " perguntas cadastradas!");
			for (Pergunta pergunta : perguntas) {
				JOptionPane.showMessageDialog(null, "Pergunta: " + pergunta.getPergunta() + "\nOpção 01: " + pergunta.getOp_01() + "\nOpção 02: " + pergunta.getOp_02() + "\nOpção 03: " + pergunta.getOp_03() + "\nOpção 04: " + pergunta.getOp_04() + "\nCorreta: " + pergunta.getCorreta());
			}
		}else{
			JOptionPane.showMessageDialog(null, "Nenhuma pergunta cadastrada!");
		}
	}
	
	public void excluirPergunta(){
		if(perguntas.size() > 0){
			for (Pergunta pergunta : perguntas) {
				String op = JOptionPane.showInputDialog("Pergunta: " + pergunta.getPergunta() + "\nOpção 01: " + pergunta.getOp_01() + "\nOpção 02: " + pergunta.getOp_02() + "\nOpção 03: " + pergunta.getOp_03() + "\nOpção 04: " + pergunta.getOp_04() + "\nCorreta: " + pergunta.getCorreta() + "\n\nExcluir?\n1 - Sim.\nQualquer tecla - Não.");
				if(op.equals("1")){
					perguntas.remove(pergunta);
					JOptionPane.showMessageDialog(null, "Pergunta removida com sucesso!");
				}
			}
		}else{
			JOptionPane.showMessageDialog(null, "Nenhuma pergunta cadastrada!");
		}
	}
	

}
