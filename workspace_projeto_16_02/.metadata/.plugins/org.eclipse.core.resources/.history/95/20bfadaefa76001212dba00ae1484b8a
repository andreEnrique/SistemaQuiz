package classes;

import javax.swing.JOptionPane;

public class GerenciadorProfessor {

	AlunoMetodos alunoM = new AlunoMetodos();
	
	public GerenciadorProfessor() {
	}
	
	public void menu(){
		String op = JOptionPane.showInputDialog("1 - Cadastrar Aluno\n2 - Listar Aluno\n3 - Excluir Aluno");
		if(op.equals("1")){
			alunoM.cadastrarAluno();
			menu();
		}else if(op.equals("2")){
			alunoM.listarAluno();
			menu();
		}else if(op.equals("3")){
			alunoM.excluirAluno();
			menu();
		}else{
			JOptionPane.showMessageDialog(null, "Opção inválida!");
			menu();
		}
	}

}
