package br.com.ufpb.classes;

import java.util.ArrayList;
import java.util.List;

import javax.swing.JOptionPane;

public class Rank {
	
	List<Rankeado> rankeados;
	
	public Rank() {
		rankeados = new ArrayList<>();
	}
	
	public void adicionarRankeado(String nome, int pontuacao){
		rankeados.add(new Rankeado(nome, pontuacao));
	}
	
	public void listarRankeado(){
		for (Rankeado rankeado : rankeados) {
			JOptionPane.showMessageDialog(null, "Nome: " + rankeado.getNome() + "\nPontuação: " + rankeado.getPontuacao());
		}
	}

}
