package classes;

import java.util.ArrayList;

import javax.swing.JOptionPane;

public class Rank {

	ArrayList<Aluno> rankeados;
	
	public Rank() {
		rankeados = new ArrayList<>();
	}
	
	public void mostrarRank(){
		for (Aluno aluno : rankeados) {
			JOptionPane.showMessageDialog(null,aluno.getNome() + "     " + aluno.getPontuacao());
		}
	}
	
	public void adicionarRank(String nome, String matricula,int pontuacao){
		this.rankeados.add(new Aluno(nome, matricula, pontuacao));
		JOptionPane.showMessageDialog(null, "            Cadastrado\n\n" + rankeados.size());
	}
}
